<h3> New Record </h3>

<%= form_for(@record) do |f| %>
  <%= f.label       :genre %>
  <%= f.text_field  :genre%>
  <br>
  <%= f.label       :artist %>
  <%= f.text_field  :artist %>
  <br><br>
  <%= f.label       :album %>
  <%= f.text_field  :album %>
  <br><br>
  <%= f.label       :year %>
  <%= f.text_field  :year %>
  <br><br>
  <%= f.label       :quantity %>
  <%= f.text_field  :quantity %>
  <br><br>
  <%= f.hidden_field  :user_id, :value => 1 %>
  <%= f.submit %>
<% end %>
