<div class="page">
  <h1> Update below: </h1>


  <%= form_for(@record, :html => {class: 'form-container'}) do |f| %>
    <%= f.label       :genre, :class => 'form-title' %>
    <%= f.text_field  :genre, :class => 'form-field' %>
    <br>
    <%= f.label       :artist, :class => 'form-title' %>
    <%= f.text_field  :artist, :class => 'form-field' %>
    <br><br>
    <%= f.label       :album, :class => 'form-title' %>
    <%= f.text_field  :album, :class => 'form-field'  %>
    <br><br>
    <%= f.label       :year, :class => 'form-title' %>
    <%= f.text_field  :year, :class => 'form-field'  %>
    <br><br>
    <%= f.label       :quantity, :class => 'form-title' %>
    <%= f.text_field  :quantity, :class => 'form-field'  %>
    <br><br>
    <%= f.submit :class => 'submit-button' %>
  <% end %>
