<!DOCTYPE html>
<html>
  <head>
    <title>RecordApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>

    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <script src="sorttable.js"></script>
    <header>
      <div class='images'>
        <img id='wombat-header' src=<%= image_url('wombat.png') %> alt="Wombat">
        <img id='logo' src=<%= image_url('logo.png') %> alt="Wombat">
        <img id='records-header' src=<%= image_url('records.png')  %> alt="Wombat">
      </div>
      <nav>
        <a class="active" href="/">Home</a> |
        <% if logged_in? %>

          <a href="/logout">Logout</a>
        <% else %>
          <a href="/login">Login</a>
        <% end %>
      </nav>
    </header>
  </head>

  <body>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
